<body>
    <!-- Aqui llamamos el headder osea la nav que creamos que se encuenta en la carpeta partials y se llama nav.ejs -->
    <%- include('partials/nav') %>

        <div class="registro">
            <div class="frameregistro">
                <form class="formcont" id="RegistroForm" action="/registro" method="POST">
                    <h2>Registro de cuenta</h2>

                    <% if (mensaje) { %>
                        <div class="alert <%= alertClass %>">
                            <%= mensaje %>
                        </div>
                        <% } %>

                            <div class="input-group">
                                <div class="input-half">
                                    <input placeholder="Nombre" type="text" name="nombre" id="nombre" required>
                                </div>
                                <div class="input-half">
                                    <input placeholder="Apellido" type="text" name="apellido" id="apellido" required>
                                </div>
                            </div>

                            <div class="input-group2">
                                <input placeholder="Correo" type="email" name="email" id="email" required>
                            </div>

                            <div class="input-half">
                                <input placeholder="ContraseÃ±a" type="password" name="pass" id="pass" required>
                            </div>

                            

                            <div class="partebaja">
                                <button type="submit" class="btn_registrar">Crear cuenta</button>
                                <div class="volver">
                                    <a href="login">Iniciar sesion</a>
                                </div>
                            </div>

                </form>
            </div>
        </div>

</body>

</html>